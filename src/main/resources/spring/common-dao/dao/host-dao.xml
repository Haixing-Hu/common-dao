<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.springframework.org/schema/beans"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- 配置 HostMapper，注意必须引用其他文件配置好 MyBatis SQL Session Template -->
  <bean class="org.mybatis.spring.mapper.MapperFactoryBean">
    <property name="mapperInterface" value="ltd.qubit.commons.dao.mapper.HostMapper"/>
    <property name="sqlSessionTemplate" ref="sqlSessionTemplate"/>
  </bean>

  <!-- 配置 HostDao -->
  <bean class="ltd.qubit.commons.dao.impl.HostDaoImpl">
    <property name="idGenerator">
      <!-- HostDao 必须使用 AutoIncrementIdGenerator -->
      <bean class="ltd.qubit.id.AutoIncrementIdGenerator"/>
    </property>
  </bean>

</beans>
