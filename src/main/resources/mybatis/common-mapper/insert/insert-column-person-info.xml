<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <sql id="insertColumnPersonInfo">
    `${prefix}id`,
    `${prefix}name`,
    `${prefix}username`,
    `${prefix}gender`,
    `${prefix}birthday`,
    <include refid="ltd.qubit.commons.dao.mapper.insertColumnCredentialInfo">
      <property name="prefix" value="${prefix}credential_"/>
    </include>
    `${prefix}contact_mobile`,
    `${prefix}contact_email`,
  </sql>
</mapper>
