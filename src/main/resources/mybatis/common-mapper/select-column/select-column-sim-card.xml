<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <sql id="selectColumnSimCard">
    ${alias}.`${columnPrefix}iccid`              AS `${asPrefix}iccid`,
    ${alias}.`${columnPrefix}imei`               AS `${asPrefix}imei`,
    ${alias}.`${columnPrefix}meid`               AS `${asPrefix}meid`,
    ${alias}.`${columnPrefix}phone`              AS `${asPrefix}phone`,
    ${alias}.`${columnPrefix}operator`           AS `${asPrefix}operator`,
    <include refid="ltd.qubit.commons.dao.mapper.selectColumnInfo">
      <property name="alias" value="${countryAlias}"/>
      <property name="columnPrefix" value=""/>
      <property name="asPrefix" value="${asPrefix}country_"/>
    </include>
    <include refid="ltd.qubit.commons.dao.mapper.selectColumnLocation">
      <property name="alias" value="${alias}"/>
      <property name="columnPrefix" value="${columnPrefix}location_"/>
      <property name="asPrefix" value="${asPrefix}location_"/>
    </include>
    ${alias}.`${columnPrefix}network_type`       AS `${asPrefix}network_type`,
    ${alias}.`${columnPrefix}status`             AS `${asPrefix}status`,
  </sql>
</mapper>
