<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <!--
    选择 EmployeeInfo 对象的字段

    == 参数 ==
    alias:                    EmployeeInfo 信息所在表的别名，一般是主表关联的 employee 表的别名，但也可能是主表的别名
    columnPrefix:             EmployeeInfo 信息所在表的字段前缀，一般为 ""
    asPrefix:                 输出字段的前缀，一般为主表中关联 employee 表的字段名 + 下划线
    credentialAlias:          获取 EmployeeInfo.credential 字段所关联的 credential 表的别名
    credentialColumnPrefix:   EmployeeInfo.credential 字段所在表的字段前缀，通常是 ""
    organizationAlias:        获取 EmployeeInfo.organization 字段所关联的 organization 表的别名
    organizationColumnPrefix: EmployeeInfo.organization 字段所在表的字段前缀，通常是 ""
    departmentAlias:          获取 EmployeeInfo.department 字段所关联的 department 表的别名
    departmentColumnPrefix:   EmployeeInfo.department 字段所在表的字段前缀，通常是 ""
  -->
  <sql id="selectColumnEmployeeInfo">
    ${alias}.`${columnPrefix}id`            AS `${asPrefix}id`,
    ${alias}.`${columnPrefix}code`          AS `${asPrefix}code`,
    ${alias}.`${columnPrefix}internal_code` AS `${asPrefix}internal_code`,
    ${alias}.`${columnPrefix}username`      AS `${asPrefix}username`,
    ${alias}.`${columnPrefix}name`          AS `${asPrefix}name`,
    ${alias}.`${columnPrefix}gender`        AS `${asPrefix}gender`,
    ${alias}.`${columnPrefix}birthday`      AS `${asPrefix}birthday`,
    ${alias}.`${columnPrefix}mobile`        AS `${asPrefix}mobile`,
    ${alias}.`${columnPrefix}state`         AS `${asPrefix}state`,
    ${alias}.`${columnPrefix}delete_time`   AS `${asPrefix}delete_time`,
    <include refid="ltd.qubit.commons.dao.mapper.selectColumnCredentialInfo">
      <property name="alias" value="${credentialAlias}"/>
      <property name="columnPrefix" value="${credentialColumnPrefix}"/>
      <property name="asPrefix" value="${asPrefix}credential_"/>
    </include>
    <include refid="ltd.qubit.commons.dao.mapper.selectColumnStatefulInfo">
      <property name="alias" value="${organizationAlias}"/>
      <property name="columnPrefix" value="${organizationColumnPrefix}"/>
      <property name="asPrefix" value="${asPrefix}organization_"/>
    </include>
    <include refid="ltd.qubit.commons.dao.mapper.selectColumnStatefulInfo">
      <property name="alias" value="${departmentAlias}"/>
      <property name="columnPrefix" value="${departmentColumnPrefix}"/>
      <property name="asPrefix" value="${asPrefix}department_"/>
    </include>
  </sql>
</mapper>
