<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <sql id="updateSetAddress">
    `${columnPrefix}street_id`        =   #{${propertyPrefix}street.id},
    `${columnPrefix}detail`           =   #{${propertyPrefix}detail},
    `${columnPrefix}postalcode`       =   #{${propertyPrefix}postalcode},
    <include refid="ltd.qubit.commons.dao.mapper.updateSetLocation">
      <property name="columnPrefix"   value="${columnPrefix}location_"/>
      <property name="propertyPrefix" value="${propertyPrefix}location."/>
    </include>
  </sql>

</mapper>
