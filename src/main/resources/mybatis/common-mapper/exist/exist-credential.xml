<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <sql id="existCredential">
    SELECT EXISTS ( SELECT 1
                    FROM `${table}` AS t
                    JOIN `credential` AS c
                        ON c.`owner_id`         = t.`id`
                       AND c.`owner_type`       = '${type}'
                       AND c.`owner_property`   = '${property}'
                    WHERE c.`type`      = #{credential.type}
                      AND c.`number`    = #{credential.number}
                    LIMIT 1 )
  </sql>

</mapper>
