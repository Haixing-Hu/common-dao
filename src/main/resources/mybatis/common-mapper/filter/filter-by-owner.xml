<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <sql id="filterByOwner">
     WHERE ${alias}.`owner_type`      = #{owner.type}
    <if test="owner.id != null">
       AND ${alias}.`owner_id`        = #{owner.id}
    </if>
    <if test="owner.property != null">
       AND ${alias}.`owner_property`  = #{owner.property}
    </if>
  </sql>

</mapper>
