<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <sql id="updateNonDeletedTokenByCode">
    UPDATE `${table}`
       SET <include refid="ltd.qubit.commons.dao.mapper.updateSetToken">
             <property name="columnPrefix"   value="token_"/>
             <property name="propertyPrefix" value="token."/>
           </include>
           `modify_time`          = #{modifyTime}
     WHERE `code`                 = #{code}
       AND `delete_time` IS NULL
  </sql>

</mapper>
