<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <sql id="updateNonDeletedLocation">
    UPDATE `${table}`
       SET <include refid="ltd.qubit.commons.dao.mapper.updateSetLocation">
             <property name="columnPrefix"   value="location_"/>
             <property name="propertyPrefix" value="location."/>
           </include>
           `modify_time`  = #{modifyTime}
     WHERE `id`           = #{id}
       AND `delete_time`  IS NULL
  </sql>

</mapper>
