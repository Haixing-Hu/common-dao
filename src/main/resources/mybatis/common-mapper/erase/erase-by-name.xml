<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <!-- 注意：MySQL v5.7 不支持 DELETE FROM xxx AS xx 的语法 -->
  <sql id="eraseByName">
    DELETE FROM `${table}`
    WHERE `name` = #{name}
  </sql>

</mapper>
