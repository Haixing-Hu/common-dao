<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <!-- 注意：MySQL v5.7 不支持 DELETE FROM xxx AS xx 的语法 -->
  <sql id="eraseForOwner">
    DELETE FROM `${table}`
    WHERE `owner_type`      = #{owner.type}
    <if test="owner.id != null">
      AND `owner_id`        = #{owner.id}
    </if>
    <if test="owner.property != null">
      AND `owner_property`  = #{owner.property}
    </if>
  </sql>

</mapper>
