<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <!-- 根据编码获取对象基本信息，返回 StatefulInfo 对象 -->
  <sql id="getStatefulInfoByParentCode">
    <include refid="ltd.qubit.commons.dao.mapper.selectStatefulInfo">
      <property name="table" value="${table}"/>
      <property name="alias" value="t"/>
    </include>
       JOIN `${parentTable}` AS p
         ON p.`id`   = t.`${parentIdColumn}`
      WHERE p.`code` = #{parentCode}
        AND t.`code` = #{code}
      LIMIT 1
  </sql>

</mapper>
