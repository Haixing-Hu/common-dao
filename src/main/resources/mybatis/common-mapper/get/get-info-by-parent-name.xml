<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <!-- 根据父对象编码和此对象名称获取对象基本信息，返回 Info 对象 -->
  <sql id="getInfoByParentName">
    <include refid="ltd.qubit.commons.dao.mapper.selectInfo">
      <property name="table" value="${table}"/>
      <property name="alias" value="t"/>
    </include>
     JOIN `${parentTable}` AS p
       ON p.`id`   = t.`${parentIdColumn}`
    WHERE p.`code` = #{parentCode}
      AND t.`name` = #{name}
    LIMIT 1
  </sql>

</mapper>
