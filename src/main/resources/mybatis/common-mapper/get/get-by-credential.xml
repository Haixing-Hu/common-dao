<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <!-- 根据证件获取对象 -->
  <sql id="getByCredential">
    <include refid="${sql}"/>
    WHERE ${credentialAlias}.`type`    = #{credential.type}
      AND ${credentialAlias}.`number`  = #{credential.number}
    LIMIT 1
  </sql>

</mapper>
