<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <!-- 根据手机号码获取对象的ID -->
  <sql id="getIdByMobile">
    SELECT t.`id` AS `id`
    FROM `${table}` AS t
    WHERE t.`mobile` = #{mobile}
    LIMIT 1
  </sql>

</mapper>
