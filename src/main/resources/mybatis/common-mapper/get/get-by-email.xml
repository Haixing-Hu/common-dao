<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <!-- 根据邮箱地址获取对象 -->
  <sql id="getByEmail">
    <include refid="${sql}"/>
    WHERE ${alias}.`email` = #{email}
    LIMIT 1
  </sql>

</mapper>
