<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <!-- 根据ID获取对象的token，无论该对象是否被标记删除 -->
  <sql id="getToken">
    SELECT
    <include refid="ltd.qubit.commons.dao.mapper.selectColumnToken">
      <property name="alias"          value="t"/>
      <property name="columnPrefix"   value="token_"/>
      <property name="asPrefix"       value=""/>
    </include>
    1 FROM `${table}` AS t  <!-- 1 是为了解决上面SQL片段以逗号结尾的问题 -->
    WHERE t.`id` = #{id}
    LIMIT 1
  </sql>

</mapper>
