<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <!--
    返回符合条件的结果的数量

    SQL片段参数
    ==========
    table:      主表名称
    alias:      主表的别名
    sql:        用于从主表及其连接表查询实体对象属性的SQL片段ID

    Mapper参数
    =========
    filter:     条件过滤器
  -->
  <sql id="count">
    <if test="filter == null">
      SELECT COUNT(1)
      FROM `${table}` AS ${alias}
    </if>
    <if test="filter != null">
      <!--
        为了能在 WHERE 语句中使用自定义的列别名，我们需要将整个查询语句包含在一个子查询中。
        例如：
        SELECT * FROM (
           SELECT o.`id`     AS `id`
                  a.`name`   AS `app_name`
           FROM `organization` AS o
             JOIN `app` AS a
              ON o.`app_id` = a.`id`
        ) AS r
        WHERE r.`name` like '%app%'
      -->
      SELECT COUNT(1) FROM (
        SELECT * FROM (
          <include refid="${sql}"/>
        ) AS __select_result__
        <include refid="ltd.qubit.commons.dao.mapper.filter">
          <property name="alias" value="__select_result__"/>
        </include>
      ) AS __count_table__
    </if>
  </sql>

</mapper>
