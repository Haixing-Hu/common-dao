<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ltd.qubit.commons.dao.mapper">

  <!--
    关联 upload 表获取 Upload 对象的字段

    == 参数 ==
    alias:          主表的别名
    uploadAlias:    关联的 upload 表的别名
   -->
  <sql id="joinUpload">
    LEFT JOIN `upload` AS ${uploadAlias}
         ON ${uploadAlias}.`id` = ${alias}.`upload_id`
  </sql>

</mapper>
